        android:text="TextView" />

    <Button
        android:id="@+id/recyle_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.27"
        android:text="Button" />

    <Button
        android:id="@+id/recyle_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.28"
        android:text="Button" />
